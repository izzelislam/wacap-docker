# =============================================================================
# Wacap Docker App - Environment Configuration
# =============================================================================
#
# Copy this file to .env and modify the values as needed:
#   cp .env.example .env
#
# IMPORTANT: Never commit your .env file to version control!
#
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED SETTINGS
# -----------------------------------------------------------------------------

# JWT Secret Key (REQUIRED)
# Used for signing authentication tokens
# Generate a secure random string for production:
#   openssl rand -base64 32
# or
#   node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your-secure-secret-key-change-in-production

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------

# Host port to expose the application (default: 3000)
# Change this if port 3000 is already in use
HOST_PORT=3000

# Node environment (default: production)
# Options: development, production
NODE_ENV=production

# -----------------------------------------------------------------------------
# CORS CONFIGURATION (Optional)
# -----------------------------------------------------------------------------

# Frontend URL for CORS configuration
# Leave empty to allow all origins, or specify your frontend URL
# Example: http://localhost:5173 or https://your-domain.com
FRONTEND_URL=

# -----------------------------------------------------------------------------
# SESSION MANAGEMENT
# -----------------------------------------------------------------------------

# Auto-start sessions on backend restart (default: enabled)
# Sessions will automatically reconnect when the server starts

# Session cleanup interval in milliseconds (default: 1 hour = 3600000)
# Set to 0 to disable periodic cleanup
SESSION_CLEANUP_INTERVAL=3600000

# Maximum session age in milliseconds (default: 30 days = 2592000000)
# Sessions older than this will be automatically deleted
# Set to 0 to disable age-based cleanup
SESSION_MAX_AGE_MS=2592000000

# Maximum inactive time for disconnected sessions in milliseconds (default: 7 days = 604800000)
# Disconnected sessions inactive longer than this will be deleted
# Set to 0 to disable inactive cleanup
SESSION_MAX_INACTIVE_MS=604800000

# -----------------------------------------------------------------------------
# INTERNAL PATHS (Usually no need to change)
# -----------------------------------------------------------------------------
# These are paths inside the container and are typically left as defaults

# Data directory inside container
# DATA_DIR=/app/data

# WhatsApp sessions storage path inside container
# SESSIONS_PATH=/app/data/sessions

# SQLite database path inside container
# DB_PATH=/app/data/wacap.db
